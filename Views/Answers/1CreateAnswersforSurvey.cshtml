@model List<Answer>

@{
    ViewData["Title"] = ViewData["CompanyName"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Please fill below answers</h1>

<p>
    <a asp-action="Index">Submit</a>
</p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].Question)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].AnswerText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].AnswerValue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].AnswerBool)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Participant)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem[i].Question.Header)
                    </td>
                    <td>
                        @if (Model[i].Question.QuestionType == QuestionType.Text)
                        {
                            @Html.TextBoxFor(modelItem => modelItem[i].AnswerText)
                        }
                    </td>
                    <td>
                        @if (Model[i].Question.QuestionType == QuestionType.Options)
                        {
                            @Html.DropDownListFor(modelItem => modelItem[i].AnswerValue, new SelectList(Model[i].Question.Options.Select(o => o.Name)))
                        }
                    </td>
                    <td>
                        @if (Model[i].Question.QuestionType == QuestionType.YesNo)
                        {
                            @Html.CheckBoxFor(modelItem => modelItem[i].AnswerBool)
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem[i].Participant.Id)
                    </td>
                    <td>
                        @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" action="CreateAnswersforSurvey" class="btn btn-default">Submit</button>
    </div>
</div>

