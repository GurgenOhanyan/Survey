@model Answer

@{
    ViewData["Title"] = "CreatAnswerForQuestion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreatAnswerForQuestion</h1>

<h1>@TempData["Header"]</h1>

<h4>Answer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatAnswerForQuestion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (TempData["QuestionType"] is QuestionType.Text)
            {
                <div class="form-group">
                    <label asp-for="AnswerText" class="control-label"></label>
                    <input asp-for="AnswerText" class="form-control" />
                    <span asp-validation-for="AnswerText" class="text-danger"></span>
                </div>
            }
            @if (TempData["QuestionType"] is QuestionType.Options)
            {
                <div class="form-group">
                    <label asp-for="AnswerValue" class="control-label"></label>
                    <input asp-for="AnswerValue" class="form-control" />
                    <span asp-validation-for="AnswerValue" class="text-danger"></span>
                </div>
            }
            @if (TempData["QuestionType"] is QuestionType.YesNo)
            {
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="AnswerBool" /> @Html.DisplayNameFor(model => model.AnswerBool)
                    </label>
                </div>
            }
            @*<div class="form-group">
                    <label asp-for="QuestionId" class="control-label"></label>
                    <select asp-for="QuestionId" class="form-control" asp-items="ViewBag.QuestionId"></select>
                </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

